body
  // gradient: #F4F4F4, #EAEAEA
  font-family font-stack
  font-family Roboto, Sans-serif
  font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-transform translate3d(0, 0, 0)

.tree1
  button
    transition all .1s
    fw 400
    border-radius .2em
    padding .5em 1.5em
    margin .2em
    color #f1f1f1
    background #3498db
    box-shadow 0 .1em 0  #2980b9
    &:hover
      background #3498db - #070707
    &:active
      box-shadow none
      background #2980b9 - #111
      transform translate(0, .1em)
  &>ol
    border-left 1px solid #ccc
    padding-left .25em
    >li:before
      left -.25em
      width 1em
      border-left none
  li
    list-style none
    font-size 1em
    padding-left 1em
    cursor pointer
    position relative
    & .a:active
      color white

    &:before
      position absolute
      content ""
      display block
      left -0.75em
      top -0.5em

      border-left 1px solid #ccc

      border-bottom 1px solid #ccc
      width 1.5em
      height 1.1em
    ol
      display none
    &.open>ol
      display block


