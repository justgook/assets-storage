html, body
  width 100%
  height 100%
  margin  0
  padding 0
  display flex
  align-items center
  justify-content center

.wrapper {
  display: flex;
  flex-flow: row wrap;
  font-weight: bold;
  text-align: center;
}


.header {
  background: tomato;
}

.footer {
  background: lightgreen;
}

.header, .footer{
  flex-grow 0
  flex-shrink 0
  flex-basis 100%

  // flex: 1 100%
}
.main, .aside{
  flex-grow 1
  flex-shrink auto
  flex-basis auto
}


.main {
  text-align: left;
  background: deepskyblue;
}
.aside-1 {
  background: gold;
}

.aside-2 {
  background: hotpink;
}

